@model Korean_Api.Models.Dramas

@{
    ViewData["Title"] = "AddDramas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row">


        <div class="col-sm-6">

            <h1>AddDramas</h1>

            <h4>Dramas</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="AddDramas">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ActorId" class="control-label"></label>
                          
                            <select asp-for="ActorId" class="form-control">
                                @{

                                    foreach (var i in ViewBag.a)
                                    {
                                        <option value="@i.Id">@i.Name</option>
                                    }

                                }
                            </select>
                            <span asp-validation-for="ActorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DramaName" class="control-label"></label>
                            <input asp-for="DramaName" class="form-control" />
                            <span asp-validation-for="DramaName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class=" mt-3 btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }

        </div>


        <div class="col-sm-6">
            <img src="~/Images/drama.jpg" style="width:400px;  height:400px;" />
        </div>

    </div>

</div>