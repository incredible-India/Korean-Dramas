@model IEnumerable<Korean_Api.Models.LeadActors>

@{
    ViewData["Title"] = "ActorList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ActorList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@{
    if (Model == null)
    {
        <h1>No actors exist...</h1>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nationality)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfMovies)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaritalStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LatestMovie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfAwards)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nationality)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfMovies)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaritalStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LatestMovie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageURL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfAwards)
                        </td>
                        <td>
                            <a asp-action="UpdateActor" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="ActorDetails" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="DeleteActor" class="text-danger" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
